/* pages/posts/posts.wxss */

swiper,
swiper image {
  width: 100%;
  height: 460rpx;
}

.item-wrap {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  padding-bottom: 40rpx;
}
/* 顶部icon+date */
.header-msg {
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  height: 60rpx;
}
.header-msg .msg-avatar {
  width: 60rpx;
  height: 60rpx;
}
.header-msg .msg-date {
  margin-left: 20rpx;
}
/* 主标题 */
.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
/* 主图 */
.main-img image {
  width: 100%;
  height: 340rpx;
}
/* 概览文字 */
.main-text {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
/* 底部按钮操作栏 */
.bottom-group {
  display: flex;
  margin-left: 20rpx;
  align-items: center;
  height: 40rpx;
}
.bottom-group .collect-icon,
.bottom-group .view-icon {
  margin-right: 16rpx;
  width: 32rpx;
  height: 32rpx;
}
.bottom-group .collect-count,
.bottom-group .view-count {
  margin-right: 40rpx;
}