/* pages/posts/postDetail/postDetail.wxss */
.wrap {
  display: flex;
  flex-direction: column;
}
.header-img {
  width: 100%;
  height: 460rpx;
  margin-bottom: 0;
}

.desc-wrap {
  display: flex;
  margin-top: 20rpx;
  margin-left: 30rpx;
  height: 64rpx;
  align-items: center;
}
.desc-avatar {
  width: 64rpx;
  height: 64rpx;
}
.desc-author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}
.desc-aside {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.desc-time {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.oper-wrap {
  position: relative;
  display: flex;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 40rpx;
  width: 100%;
  height: 90rpx;
  justify-content: flex-end;
  margin-top: 20rpx;
}
.oper-icon {
  width: 90rpx;
  height: 90rpx;
}
.oper-icon:first-child {
  margin-right: 30rpx;
}
.line {
  position: absolute;
  top: 50%;
  left: 30rpx;
  right: 40rpx;
  box-sizing: border-box;
  height: 1px;
  background-color: #e5e5e5;
  z-index: -99;
}
.content {
  font-size: 13px;
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}