/* pages/welcome/welcome.wxss */
.container {
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #b3d4db;
}

.user-avatar {
  margin-top: 160rpx;
  width: 200rpx;
  height: 200rpx;
}

.motto {
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.welcome-button {
  position: absolute;
  bottom: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  font-size: 32rpx;
  border: 1px solid #405f80;
  background: transparent;
}